<div class="d-flex justify-content-center max-vh-100">
    <form asp-controller="User" asp-action="Login" method="post" class="login-form p-4 border rounded shadow-lg" style="max-width: 320px; width: 100%;">
        <h3 class="text-center mb-4">Přihlášení</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label for="username" class="form-label">Uživatelské jméno</label>
            <input type="text" name="username" id="username" class="form-control" placeholder="Uživatelské jméno" autocomplete="off" required />
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Heslo</label>
            <input type="password" name="password" id="password" class="form-control" placeholder="Heslo" autocomplete="off" required />
        </div>

        <button type="submit" class="btn btn-primary w-100">Přihlásit se</button>

        <div class="text-center mt-3">
        </div>
    </form>
</div>