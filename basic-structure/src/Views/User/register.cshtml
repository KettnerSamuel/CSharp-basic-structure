@model RegisterViewModel

<div class="d-flex justify-content-center max-vh-100">
    <form asp-controller="User" asp-action="Register" method="post" class="p-4 border rounded shadow-sm" style="max-width: 400px; width: 100%;">
        <h3 class="text-center mb-4">Registrace</h3>

        <div class="mb-3">
            <label asp-for="Username" class="form-label">Uživatelské jméno</label>
            <input asp-for="Username" class="form-control" placeholder="Uživatelské jméno" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label">Heslo</label>
            <input asp-for="Password" class="form-control" placeholder="Heslo" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ConfirmPassword" class="form-label">Potvrďte heslo</label>
            <input asp-for="ConfirmPassword" class="form-control" placeholder="Potvrďte heslo" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <input asp-for="AcceptTerms" class="form-check-input" />
            <label asp-for="AcceptTerms" class="form-check-label">Souhlasím s <a asp-area="" asp-controller="Home" asp-action="Privacy">podmínkami použití</a></label>
            <span asp-validation-for="AcceptTerms" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success w-100">Registrovat</button>
    </form>
</div>